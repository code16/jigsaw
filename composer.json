{
    "name": "code16/jigsaw",
    "description": "",
    "keywords": [
        "code16",
        "jigsaw"
    ],
    "homepage": "https://github.com/code16/jigsaw",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Philippe Lonchampt",
            "email": "philippe@code16.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "league/commonmark": "^2.3",
        "tightenco/jigsaw": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Code16\\Jigsaw\\": "src"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Code16\\Jigsaw\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
